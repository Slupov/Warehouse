@using System.Collections
@using Warehouse.Web.Infrastructure
@model Warehouse.Web.Models.Components.GenericViewObjectModel

@{
    var collectionElementType = Model.Object.GetType().GetGenericArguments().FirstOrDefault();
    var modelObjType = Model.Object.GetType();
    var id = modelObjType.GetProperty("Id").GetValue(Model.Object);
}

<section class="section bg-light">
    <div class="container">
        <div class="row">
            <section class="col-lg-12 text-center p-0">
                <h4>@modelObjType.Name TODO FIX THIS</h4>
                <hr/>
                <dl class="row">

                    @foreach (var propName in Model.PropsToShow)
                    {
                        var prop      = modelObjType.GetComplexProperty(propName);
                        var propValue = ReflectionHelpers.GetPropertyValue(Model.Object, propName);

                        <dt class="col-lg-6">
                            @prop.GetDisplayNameValue()
                        </dt>
                        <dd class="col-lg-6">
                            @propValue
                        </dd>
                    }
                    
                    <div class="col-lg-12 text-center p-0">
                        <br/>
                        <br/>
                        <div class="row">
                            <div class="col-lg-6">
                                <a asp-action="Index" class="btn btn-default">Back to List</a>
                            </div>

                            <div class="col-lg-6">
                                <a asp-action="Edit" asp-route-id="@id" class="btn btn-success">Edit</a>
                            </div>
                        </div>
                    </div>
                </dl>
            </section>
        </div>
    </div>
</section>