@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewData["TitleDescription"] = "Create a new user";
}

<section class="section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row">
                    <h4 class="col-lg-12">Create a new account.</h4>
                    <hr/>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group col-lg-12">
                        <input asp-for="Input.Username" class="form-control"/>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-12">
                        <input asp-for="Input.Email" class="form-control"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-12">
                        <input asp-for="Input.Password" class="form-control"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-12">
                        <input asp-for="Input.ConfirmPassword" class="form-control"/>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-default col-lg-12">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}