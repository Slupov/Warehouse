@using Warehouse.Data.Models
@using Warehouse.Web.Infrastructure
@using Warehouse.Web.Models.Components
@using Warehouse.Web.Views.Shared.Components
@model Warehouse.Data.Models.ApplicationSettings

@{
    ViewData["Title"] = "Edit Application settings";
    ViewData["TitleDescription"] = "Here you can edit all details for the selected application settings.";

    GenericViewObjectModel genericVM = new GenericViewObjectModel();
    genericVM.Object = Model;

    genericVM.PropsToShow = new List<string>()
    {
        ReflectionHelpers.GetComplexPropName<ApplicationSettings>(x => x.PricesPrecisionUnits),
        ReflectionHelpers.GetComplexPropName<ApplicationSettings>(x => x.PricesIncludeVAT)
    };

    genericVM.HiddenProps = new List<string>()
    {
        ReflectionHelpers.GetComplexPropName<ApplicationSettings>(x => x.Id),
        ReflectionHelpers.GetComplexPropName<ApplicationSettings>(x => x.CompanyId)
    };
}

@await Component.InvokeAsync(nameof(GenericEditViewViewComponent).Replace("ViewComponent", ""), genericVM)
    

@section Scripts {

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

}