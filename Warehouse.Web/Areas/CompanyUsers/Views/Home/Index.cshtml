@using Microsoft.AspNetCore.Identity
@model Warehouse.Web.Areas.CompanyUsers.Models.CompanyUsersIndexViewModel

@{
    ViewData["Title"] = "Company users list";
    ViewData["TitleDescription"] = "Here you can see a list of all users in your company.";
}

@section Styles
{
    <style type="text/css">
        .fa-sm{
            font-size: 10px;
        }
    </style>
}
<br/>

<div class="container">
    <p>
        <a asp-action="Create" class="btn btn-success col-lg-12">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Users.FirstOrDefault().UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.FirstOrDefault().Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.FirstOrDefault().Company.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.FirstOrDefault().EmailConfirmed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.FirstOrDefault().PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserRoles)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                var usersCnt = Model.Users.Count();
                for (int i = 0; i < usersCnt; i++)
                {
                    var currUsr = Model.Users.ElementAt(i);
                    var currRoles = Model.UserRoles.ElementAt(i);

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => currUsr.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => currUsr.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => currUsr.Company.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => currUsr.EmailConfirmed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => currUsr.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => currRoles)
                        </td>
                        
                        <td>
                            <a asp-action="Edit" asp-route-id="@currUsr.Id" class="btn btn-info">
                                <i class="fa fa-edit fa-sm"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@currUsr.Id" class="btn btn-default">
                                <i class="fa fa-info"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@currUsr.Id" class="btn btn-danger">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>