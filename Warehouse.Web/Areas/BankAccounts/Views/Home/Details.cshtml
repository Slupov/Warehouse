@model Warehouse.Data.Models.BankAccount

@{
    ViewData["Title"] = "Bank account details";
    ViewData["TitleDescription"] = "Here you can check all details for the selected bank account.";
}

<section class="section bg-light">
    <div class="container">
        <div class="row">
            <section class="col-lg-12 text-center p-0">
                <h4>BankAccount</h4>
                <hr />
                <dl class="row">
                    <dt class="col-lg-6">
                        @Html.DisplayNameFor(model => model.Company)
                    </dt>
                    <dd class="col-lg-6">
                        @Html.DisplayFor(model => model.Company.Id)
                    </dd>
                    <dt class="col-lg-6">
                        @Html.DisplayNameFor(model => model.BIC)
                    </dt>
                    <dd class="col-lg-6">
                        @Html.DisplayFor(model => model.BIC)
                    </dd>
                    <dt class="col-lg-6">
                        @Html.DisplayNameFor(model => model.IBAN)
                    </dt>
                    <dd class="col-lg-6">
                        @Html.DisplayFor(model => model.IBAN)
                    </dd>
                    <dt class="col-lg-6">
                        @Html.DisplayNameFor(model => model.Currency)
                    </dt>
                    <dd class="col-lg-6">
                        @Html.DisplayFor(model => model.Currency)
                    </dd>

                    <div class="col-lg-12 text-center p-0">
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-lg-6">
                                <a asp-action="Index" class="btn btn-default">Back to List</a>
                            </div>

                            <div class="col-lg-6">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
                            </div>
                        </div>
                    </div>
                </dl>
            </section>
        </div>
    </div>
</section>