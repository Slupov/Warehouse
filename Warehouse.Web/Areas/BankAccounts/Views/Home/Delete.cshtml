@model Warehouse.Data.Models.BankAccount

@{
    ViewData["Title"] = "Delete Bank account";
    ViewData["TitleDescription"] = "Are you sure you want to delete this Bank account?";
}

<section class="section bg-light">
    <div class="container">
        <div class="row">
            <section class="col-lg-12 text-center p-0">
                <h4>BankAccount</h4>
                <hr />
                <dl class="row">
                    <dt class="col-lg-6">
                        @Html.DisplayNameFor(model => model.Company)
                    </dt>
                    <dd class="col-lg-6">
                        @Html.DisplayFor(model => model.Company.Name)
                    </dd>
                    <dt class="col-lg-6">
                        @Html.DisplayNameFor(model => model.BIC)
                    </dt>
                    <dd class="col-lg-6">
                        @Html.DisplayFor(model => model.BIC)
                    </dd>
                    <dt class="col-lg-6">
                        @Html.DisplayNameFor(model => model.IBAN)
                    </dt>
                    <dd class="col-lg-6">
                        @Html.DisplayFor(model => model.IBAN)
                    </dd>
                    <dt class="col-lg-6">
                        @Html.DisplayNameFor(model => model.Currency)
                    </dt>
                    <dd class="col-lg-6">
                        @Html.DisplayFor(model => model.Currency)
                    </dd>

                    <div class="col-lg-12 text-center p-0">
                        <br />
                        <br />
                        <form asp-action="Delete" class="row">
                            <input type="hidden" asp-for="Id" />
                            <div class="col-lg-6">
                                <a asp-action="Index" class="btn btn-default">Back to List</a>
                            </div>
                            <div class="col-lg-6">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </div>
                        </form>
                    </div>
                </dl>
            </section>
        </div>
    </div>
</section>
