@using Warehouse.Data.Models
@using Warehouse.Web.Infrastructure
@using Warehouse.Web.Models.Components
@using Warehouse.Web.Views.Shared.Components
@model Warehouse.Data.Models.BankAccount

@{
    ViewData["Title"] = "Edit Bank account";
    ViewData["TitleDescription"] = "Here you can edit all details for the selected bank account.";

    GenericViewObjectModel genericVM = new GenericViewObjectModel();
    genericVM.Object = Model;

    genericVM.PropsToShow = new List<string>()
    {
        ReflectionHelpers.GetComplexPropName<BankAccount>(x => x.IBAN),
        ReflectionHelpers.GetComplexPropName<BankAccount>(x => x.BIC),
        ReflectionHelpers.GetComplexPropName<BankAccount>(x => x.Currency)
    };

    genericVM.HiddenProps = new List<string>()
    {
        ReflectionHelpers.GetComplexPropName<BankAccount>(x => x.CompanyId)
    };
}

@await Component.InvokeAsync(nameof(GenericEditViewViewComponent).Replace("ViewComponent", ""), genericVM)