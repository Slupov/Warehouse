@model Warehouse.Data.Models.BankAccount

@{
    ViewData["Title"]            = "Create a Bank account";
    ViewData["TitleDescription"] = "Here you can create a new bank account that links to your company in" +
                                   "order to use it for further payments.";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BIC" class="control-label"></label>
                <input asp-for="BIC" class="form-control" />
                <span asp-validation-for="BIC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IBAN" class="control-label"></label>
                <input asp-for="IBAN" class="form-control" />
                <span asp-validation-for="IBAN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>