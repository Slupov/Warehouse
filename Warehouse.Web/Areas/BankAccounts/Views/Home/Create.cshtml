@using Warehouse.Data.Enums
@model Warehouse.Data.Models.BankAccount

@{
    ViewData["Title"] = "Create a Bank account";
    ViewData["TitleDescription"] = "Here you can create a new bank account that links to your company in" +
                                   "order to use it for further payments.";
}

<section class="section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center p-0">
                <form asp-action="Create" class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-lg-12">
                        <label asp-for="BIC" class="control-label"></label>
                        <input asp-for="BIC" class="form-control" />
                        <span asp-validation-for="BIC" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-12">
                        <label asp-for="IBAN" class="control-label"></label>
                        <input asp-for="IBAN" class="form-control" />
                        <span asp-validation-for="IBAN" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-12">
                        <label asp-for="Currency" class="control-label mb-4"></label>
                        <select asp-for="Currency" asp-items="Html.GetEnumSelectList(typeof (Currency))" class="form-control"></select>
                        <span asp-validation-for="Currency" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6">
                        <a asp-action="Index" class="btn btn-default">Back to List</a>
                    </div>
                    <div class="form-group col-lg-6">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>