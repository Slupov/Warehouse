@using Warehouse.Data.Models
@using Warehouse.Web.Infrastructure
@using Warehouse.Web.Models.Components
@using Warehouse.Web.Views.Shared.Components
@model Warehouse.Data.Models.Company

@{
    ViewData["Title"] = "Company details";
    ViewData["TitleDescription"] = "Here you can check all details for your company.";

    GenericViewObjectModel genericVM = new GenericViewObjectModel();
    genericVM.Object = Model;

    genericVM.PropsToShow = new List<string>()
{
ReflectionHelpers.GetComplexPropName<Company>(x => x.Name),
ReflectionHelpers.GetComplexPropName<Company>(x => x.IdentificationCode),
ReflectionHelpers.GetComplexPropName<Company>(x => x.ContactsId),
ReflectionHelpers.GetComplexPropName<Company>(x => x.OwnerName),
ReflectionHelpers.GetComplexPropName<Company>(x => x.ApplicationSettingsId),
};
}

@await Component.InvokeAsync(nameof(GenericDetailsViewViewComponent).Replace("ViewComponent", ""), genericVM)