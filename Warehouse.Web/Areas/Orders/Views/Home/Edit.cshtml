@using Warehouse.Data.Enums
@model Warehouse.Data.Models.Order

@{
    ViewData["Title"] = "Edit Order";
    ViewData["TitleDescription"] = "Here you can edit all details for the selected order.";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <select asp-for="PaymentMethod" asp-items="Html.GetEnumSelectList(typeof (PaymentMethod))" class="form-control"></select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentPrint" class="control-label"></label>
                <select asp-for="PaymentPrint" asp-items="Html.GetEnumSelectList(typeof (PaymentPrint))" class="form-control"></select>
                <span asp-validation-for="PaymentPrint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
