@using Warehouse.Data.Models
@using Warehouse.Web.Infrastructure
@using Warehouse.Web.Models.Components
@using Warehouse.Web.Views.Shared.Components
@model Warehouse.Data.Models.Order

@{
    ViewData["Title"] = "Create an Order";
    ViewData["TitleDescription"] = "Here you can create a new order.";

    GenericViewObjectModel genericVM = new GenericViewObjectModel();
    genericVM.Object = new Order();

    genericVM.PropsToShow = new List<string>()
    {
        ReflectionHelpers.GetComplexPropName<Order>(x => x.Name),
        ReflectionHelpers.GetComplexPropName<Order>(x => x.PaymentMethod),
        ReflectionHelpers.GetComplexPropName<Order>(x => x.PaymentPrint)
    };
}

@await Component.InvokeAsync(nameof(GenericCreateViewViewComponent).Replace("ViewComponent", ""), genericVM)